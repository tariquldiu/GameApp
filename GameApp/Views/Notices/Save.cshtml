
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/Controller/Home.js"></script>
<div class="login" ng-app="myApp">
    <h1><a href="#">UNIQUE SHOP </a></h1>
    <div class="login-bottom" ng-controller="Home">
        <h2>Add Notice</h2>
        <div class="col-md-12">

            <div class="form-group">
                <input type="text" class="form-control" id="smallinput" ng-model="Notice.Description" placeholder="Description">
            </div>
            <div class="form-group">
                <input type="checkbox" ng-model="Notice.HasVoting" />Has Voting
            </div>

            <div class="form-group">
                <label>
                    <input type="submit" class="btn btn-warning" ng-disabled="!Notice.Description" ng-click="SaveNotice()" value="Submit">
                </label>
               
                <label>
                    <input type="submit" class="btn btn-danger" ng-click="BackToNoticeList()" value="List">
                </label>
            </div>
        </div>



        <div class="clearfix"> </div>
    </div>
</div>