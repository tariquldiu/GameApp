
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/Controller/GameTopup.js"></script>

<div ng-app="myApp">
    <div ng-controller="GameTopup">
        <span style="font-size:20px; float: left;">Game Topup List</span>
        <span style="float: right;"><button class="btn btn-success" ng-click="AddGameTopup();"><i class="glyphicon-plus"></i>GameTopup</button></span>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align: center;">S/L</th>
                    <th style="text-align: center;">Game Name</th>
                    <th style="text-align: center;">Offer Name</th>
                    <th style="text-align: center;">Player Id</th>
                    <th style="text-align: center;">Social Account</th>
                    <th style="text-align: center;">Is Active</th>
                    <th style="text-align: center;">Updated Date</th>
                    <th style="text-align: center;">Image</th>
                    <th style="text-align: center;">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="GameTopup in GameTopupList">
                    <td style="text-align: center;">{{$index+1}}</td>
                    <td style="text-align: center;">{{GameTopup.GameName}}</td>
                    <td style="text-align: center;">{{GameTopup.OfferName}}</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsEnterPlayerId==true}}">Yes</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsEnterPlayerId==false}}">No</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsSocialAccount==true}}">Yes</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsSocialAccount==false}}">No</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsActive==true}}">Yes</td>
                    <td style="text-align: center;" ng-show="{{GameTopup.IsActive==false}}">No</td>
                    <td style="text-align: center;">{{GameTopup.UpdatedDateSt}}</td>
                    <td style="text-align: center;">
                        <img src="~/UploadedFiles/{{GameTopup.ImageUrl}}" style="width:20px;height:25px;">
                    </td>
                    <td>
                        <button type="button" class="btn btn-warning" ng-click="EditGameTopup(GameTopup);">Edit</button>
                        <button type="button" class="btn btn-danger" ng-click="DeleteGameTopup(GameTopup);">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


